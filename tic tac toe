            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 2 And MM = 2 And BR = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TR = 2 And MR = 2 And BR = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If BL = 2 And BM = 2 And BR = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
    End Sub

    Private Sub btnHowToPlay_Click(sender As Object, e As EventArgs) Handles btnHowToPlay.Click
        lblHowToPlay.Visible = True
        lblHowToPlay.Text = "two players, X and O, take turns marking the spaces in a 3×3 grid. The player who succeeds in placing three respective marks in a horizontal, vertical, or diagonal row wins the game."
    End Sub
End Class
