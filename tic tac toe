Public Class Form1

    Dim TL As Integer
    Dim TM As Integer
    Dim TR As Integer
    Dim ML As Integer
    Dim MM As Integer
    Dim MR As Integer
    Dim BL As Integer
    Dim BM As Integer
    Dim BR As Integer
    Dim Turn As Integer
    Dim TurnChanger As Integer
    Dim Starter As Integer
    Dim StarterChange As Integer


    Private Sub btnCloseForm_Click(sender As Object, e As EventArgs) Handles btnCloseForm.Click
        Close()
    End Sub


    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        btnTL.Visible = False
        btnTM.Visible = False
        btnTR.Visible = False
        btnML.Visible = False
        btnMM.Visible = False
        btnMR.Visible = False
        btnBL.Visible = False
        btnBM.Visible = False
        btnBR.Visible = False
        lblV1.Visible = False
        lblV2.Visible = False
        lblH1.Visible = False
        lblH2.Visible = False
    End Sub

    Private Sub btnReset_Click(sender As Object, e As EventArgs) Handles btnReset.Click
        btnTL.Text = " "
        btnTR.Text = " "
        btnTM.Text = " "
        btnML.Text = " "
        btnMM.Text = " "
        btnMR.Text = " "
        btnBL.Text = " "
        btnBM.Text = " "
        btnBR.Text = " "
        TL = 0
        TM = 0
        TR = 0
        ML = 0
        MM = 0
        MR = 0
        BL = 0
        BM = 0
        BR = 0
        btnTL.Visible = False
        btnTM.Visible = False
        btnTR.Visible = False
        btnML.Visible = False
        btnMM.Visible = False
        btnMR.Visible = False
        btnBL.Visible = False
        btnBM.Visible = False
        btnBR.Visible = False
        lblV1.Visible = False
        lblV2.Visible = False
        lblH1.Visible = False
        lblH2.Visible = False
        btnTL.Enabled = True
        btnTM.Enabled = True
        btnTR.Enabled = True
        btnML.Enabled = True
        btnMM.Enabled = True
        btnMR.Enabled = True
        btnBL.Enabled = True
        btnBM.Enabled = True
        btnBR.Enabled = True
        lblTurn.Text = " "
        lblWinner.Text = " "
    End Sub

    Private Sub btn2player_Click(sender As Object, e As EventArgs) Handles btn2player.Click
        btnTL.Visible = True
        btnTM.Visible = True
        btnTR.Visible = True
        btnML.Visible = True
        btnMM.Visible = True
        btnMR.Visible = True
        btnBL.Visible = True
        btnBM.Visible = True
        btnBR.Visible = True
        lblV1.Visible = True
        lblV2.Visible = True
        lblH1.Visible = True
        lblH2.Visible = True
        lblHowToPlay.Visible = False
        StarterChange = Starter * 2
        If Starter = 0 Then
            Do
                Randomize()
                Turn = (Rnd() * 2) + 1
            Loop Until Turn = 1 Or Turn = 2
            If Turn = 1 Then
                lblTurn.Text = "X Starts"
                Starter = 1
            End If
            If Turn = 2 Then
                lblTurn.Text = "O Starts"
                Starter = 2
            End If
        End If
        If StarterChange = 4 Then
            Turn = 1
            Starter = 1
            lblTurn.Text = "X Starts"
        End If
        If StarterChange = 2 Then
            Turn = 2
            Starter = 2
            lblTurn.Text = "O Starts"
        End If

    End Sub

    Private Sub btnTL_Click(sender As Object, e As EventArgs) Handles btnTL.Click
        If Turn = 1 Then
            btnTL.Text = "X"
            TL = 1
        End If
        If Turn = 2 Then
            btnTL.Text = "O"
            TL = 2
        End If
        TurnChanger = Turn * 2
        If TurnChanger = 2 Then
            Turn = 2
        End If
        If TurnChanger = 4 Then
            Turn = 1
        End If
        If Turn = 1 Then
            lblTurn.Text = "X Turn"
        End If
        If Turn = 2 Then
            lblTurn.Text = "O Turn"
        End If
        btnTL.Enabled = False
        If TL = 1 And TM = 1 And TR = 1 Then
            lblWinner.Text = "X WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 1 And MM = 1 And BR = 1 Then
            lblWinner.Text = "X WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 1 And ML = 1 And BL = 1 Then
            lblWinner.Text = "X WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 2 And TM = 2 And TR = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 2 And MM = 2 And BR = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
        If TL = 2 And ML = 2 And BL = 2 Then
            lblWinner.Text = "O WINS"
            btnTL.Enabled = False
            btnTM.Enabled = False
            btnTR.Enabled = False
            btnML.Enabled = False
            btnMM.Enabled = False
            btnMR.Enabled = False
            btnBL.Enabled = False
            btnBM.Enabled = False
            btnBR.Enabled = False
        End If
    End Sub

